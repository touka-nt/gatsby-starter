{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2015",
      "es2017",
      "es2019",
    ],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "src"
      ],
      "assets": [
        "assets"
      ],
      "test": [
        "test"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}
